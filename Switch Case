#include <iostream>

using namespace std;

int main(){
	int val;
	
	cout << "Selecione o transporte: \n";
	cout << "[1]=Carro, [2]=Moto, [3]=Aviao, [4]=Helicoptero\n";
	
	cin >> val;
	
	switch(val){
	case 1:
	case 2:
		cout << "Transporte terrestre Selecionado \n";
		switch(val){
		case 1:
			cout << "Carro selecionado\n";
			break;
		case 2:
			cout << "Moto selecionado\n";
			break;
		}
		break;
    case 3:
 	case 4:
 		cout << "Transporte aereo Selecionado \n";
 		switch(val){                   
 		case 3:
 			cout << "Aviao Selecionado \n";
 			break;
 		case 4:
 			cout << "Helicoptero Selecionado\n";
 			break;
        }
        break;
	default:
		cout << "Nenhuma Opção selecionado";
	}
	return 0;
}

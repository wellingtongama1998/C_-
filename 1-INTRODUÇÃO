#PRINT OLÁ MUNDO.
#CRIAR VARIAVEL INT E INCREMENTAR +1
#PAUSE

#include <iostream>
#include <string>

using namespace std;

main(int argc, char** argv)
{
	cout << "Ola mundo!!!";
	int i;
	cout << "Digite um numero: ";
	cin >> i;
	cout << "Numero digitado " << i << " incrementando: " << i+1 << endl;
	
	cin.get(); 
	return 0;
}

#######################################################################################
#PEGA ANO ATUAL E ANO NASCIMENTO E
#PRINTAR IDADE

#include <iostream>
#include <string>

int idade;
int anoatual;
int anonascimento;
using namespace std;

main(int argc, char** argv)
{
	cout << "Qual ano voce nasceu ? ";
	cin >> anonascimento;
	cout << "Qual o ano atual ? ";
	cin >> anoatual;
	cout << "Sua idade: " << anoatual-anonascimento << endl;
	
	cin.get(); 
	return 0;
}

##########################################################################################
#COTAÇÃO DO DOLAR

#include <iostream>
#include <string>

float dolar;
float cotacaodolar;


using namespace std;

main(int argc, char** argv)
{
	cout << "Quanto voce tem em dolar ?$";
	cin >> dolar;
	cout << "Qual a cotacao do dolar para real ?";
	cin >> cotacaodolar;
	cout << "Em reais voce tera R$" << cotacaodolar*dolar;
	cin.get(); 
	return 0;
}

###########################################################################################
#DESCONTO DO VALOR DO PRODUTO COM PORCENTAGEM de 5%

#include <iostream>
#include <string>

float preco;
float desconto = 5;


using namespace std;

main(int argc, char** argv)
{
	cout << "Qual o preco do produto ?R$";
	cin >> preco;
	cout << "O desconto e de 5% ";
    cout << (preco)-((desconto/100)*preco);
    
	cin.get(); 
	return 0;
}

##########################################################################################
#DESCONTO COM O VALOR DO PRODUTO,INSERINDO A PORCENTAGEM DO DESCONTO

#include <iostream>
#include <string>

float preco;
float desconto;


using namespace std;

main(int argc, char** argv)
{
	cout << "Qual valor do produto R$";
	cin >> preco;
	cout << "Qual a porcentagem do desconto %";
	cin >> desconto;
	preco = (preco)-((desconto/100)*preco);
	cout << "R$" << preco;
	
    
	cin.get(); 
	return 0;
}

#################################################################################
#TRANSFORMAR TEMPERATURA F° EM C°

#include <iostream>
#include <string>

using namespace std;

float f;
float c;
int main()
{
	cout << "Qual a temperatura em farenhein ?";
	cin >> f;
	c = (f-32)* 5/9;
	cout << c;
	
	
	cin.get();
	return 0;
}

#################################################################################
#DESCOBRIR PORCENTAGEM

#include <iostream>
#include <string>

using namespace std;

main(){
	int total,passadas,restam;
	float andamento;
	
	cout << "Total de aula: ";
	cin >> total;
	cout << "Quantas aula passadas: ";
	cin >> passadas;
	
	restam=total-passadas;
	andamento=(passadas*100)/total;
	cout << "Faltam " << restam << endl;
	cout << "Andamento: " << andamento << "%";

}
